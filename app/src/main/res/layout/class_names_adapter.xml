<?xml version="1.0" encoding="utf-8"?>



<com.google.android.material.card.MaterialCardView
android:id="@+id/cardView_adapter"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginLeft="4dp"
android:layout_marginRight="4dp"
android:layout_marginTop="4dp"
android:layout_marginBottom="4dp"
android:transitionName="ExampleTransition"
app:cardBackgroundColor="@color/white"
app:cardCornerRadius="12dp">

<FrameLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounder_corner">
    <ImageView
        android:id="@+id/card_view_background_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/computer_science"
        android:scaleType="centerCrop"
        android:background="@drawable/rounder_corner"/>

    <RelativeLayout
        android:id="@+id/card_view_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/subject_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engineering Mathematics"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subject_name"
            android:text="5th"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/semester"
            android:layout_marginTop="20dp"
            android:text="CSE"
            android:textColor="@color/white" />
    </RelativeLayout>

</FrameLayout>
</com.google.android.material.card.MaterialCardView>